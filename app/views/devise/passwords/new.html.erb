<%= render 'shared/onboarding_header'%>
<div class="mt-5 sm:mx-auto sm:w-full sm:max-w-sm flex flex-col justify-center text-primary italic">
  <div class="bg-white px-8 pt-2 pb-8 mb-4">
    <h2 class="mb-4 font-bold text-2xl">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class: "font-bold mb-2" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"my-2 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", :class => "bg-secondary hover:bg-primary text-white font-bold py-4 px-4 w-full italic my-2" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
  </div>
