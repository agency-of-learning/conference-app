<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @talk %>

    <p class="my-5">
      <% @talk.speakers.each do |s| %>
        <strong class="block font-medium mb-1"><%= link_to s.name, s %></strong>
      <% end %>
    </p>

    <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= @talk.description %>
  </p>

    <% if current_user.admin? %> <%# temporary fix %>
      <%= link_to 'Edit this talk', edit_talk_path(@talk), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <div class="inline-block ml-2">
        <%= link_to 'Delete', talk_path(@talk), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium",
            data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this talk?" } %>
      </div>
    <% end %>
    <%= link_to 'Back to talks', talks_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
