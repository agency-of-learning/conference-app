<div id="<%= dom_id talk %>">
  <div class="flex flex-row items-center border-2 border-secondary-50 p-4">
    <div class="flex-grow">
      <p class="font-bold text-secondary">
        <%= talk.start_time.to_fs(:weekday_month_date) %>  
      </p>
      <p class="my-3">
        <strong class="block font-extrabold mb-1 text-lg text-primary">
        <%= talk.start_time.to_fs(:twenty_four_hour_and_minutes) %> - <%= talk.add_duration.to_fs(:twenty_four_hour_and_minutes) %>
        </strong>
      </p>
      
      <p class="my-1">
        <strong class="block font-bold text-secondary"> <%= talk.talk_format.titleize %> </strong>
      </p>

      <p>
        <strong class="block font-medium text-secondaryi pr-4"> <%= link_to talk.title, talk %> </strong>
      </p>

      <p class="my-2">
        <% talk.speakers.each do |s| %>
          <strong class="block font-medium mb-1 text-sm text-secondary">Speaker: <%= link_to s.name, s %> </strong>
        <% end %>
      </p>

      <p class="my-3">
        <strong class="block font-bold mb-1 text-primary"><%= talk.location %></strong>
      </p>

      <p>
        <% talk.tags.each do |t| %>
          <strong class= "mr-2 py-2 px-2 bg-secondary-100 text-medium inline-block font-semibold text-white text-center"><%= t.name %> </strong>

        <% end %>
      </p>

    </div>
    
    <div>
      <%= turbo_frame_tag talk, :talks_users do %>
        <p class="my-5">
          <strong class="block font-bold mb-1">
            <% if talk.selected_by?(current_user) %>
              <%= button_to talks_user_path(talk.talks_users.find_by(user: current_user)), method: :delete, 
              class: "py-3 px-5 text-secondary block font-medium" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="75" height="75" viewBox="0 0 15 15">
                <path fill="currentColor" fill-rule="evenodd" d="M13.5 2H12V0h-1v2H4V0H3v2H1.5A1.5 1.5 0 0 0 0 
                3.5v10A1.5 1.5 0 0 0 1.5 15h12a1.5 1.5 0 0 0 1.5-1.5v-10A1.5 1.5 0 0 0 13.5 2Zm-6.476 
                9.232l3.852-4.403l-.752-.658l-3.148 3.598l-1.622-1.623l-.708.708l2.378 2.378Z" clip-rule="evenodd"/>
                </svg>
              <% end %>
            <% else %>
              <%= button_to talks_users_path(talk_id: talk), class: "py-3 px-4 text-secondary block font-medium" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="90" height="90" viewBox="0 0 1024 1024">
                <path fill="currentColor" d="M880 112H144c-17.7 0-32 14.3-32 32v736c0 17.7 14.3 32 32 
                32h736c17.7 0 32-14.3 32-32V144c0-17.7-14.3-32-32-32zM704 536c0 4.4-3.6 8-8 8H544v152c0 
                4.4-3.6 8-8 8h-48c-4.4 0-8-3.6-8-8V544H328c-4.4 0-8-3.6-8-8v-48c0-4.4 3.6-8 8-8h152V328c0-4.4 
                3.6-8 8-8h48c4.4 0 8 3.6 8 8v152h152c4.4 0 8 3.6 8 8v48z"/>
                </svg>
              <% end %>
            <% end %>
          </strong>
        </p>
     <% end %> 
     </div>
  </div>

  <hr class="my-6">
</div>

