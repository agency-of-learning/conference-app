<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <h1 class="font-extrabold text-2xl text-primary mb-6 italic">Speaker Details</h1>

    <%= render @speaker %>

    <div class="flex flex-col items-center">

      <div>
        <p class="my-4 block font-lg text-secondary">
          <%= @speaker.bio %>
        </p>
      </div>

      <div class="flex flex-row justify-between mb-4">
        <%= link_to @speaker.github do %>
          <i class="fa-brands fa-github w-12 h-12 mx-4 text-secondary"></i>
        <% end %>

        <%= link_to @speaker.linkedin do %>
          <i class="fa-brands fa-linkedin w-12 h-12 mx-4 text-secondary"></i>
        <% end %>

        <%= link_to @speaker.twitter do %>
          <i class="fa-brands fa-twitter w-12 h-12 mx-4 text-secondary"></i>
        <% end %>

      </div>
    </div>

    <% if current_user&.admin? %> <%# TODO Routes Controll %>
      <%= link_to 'Edit this speaker', edit_speaker_path(@speaker), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <div class="inline-block ml-2">
        <%= link_to 'Delete', speaker_path(@speaker), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium",
            data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this speaker?" } %>
      </div>
    <% end %>

    <div class="mx-auto">
      <p class="my-4">
      <strong class="font-extrabold text-2xl text-primary italic">Sessions</strong>
      </p>
      </div>
      <p class="my-5">
      <% @speaker.talks.each do |talk| %>
        <%= render "shared/my_schedule_talk", talk: talk %>
      <% end %>
      </p>
  

  <div class="flex justify-center my-8">
    <%= link_to 'Back to Agenda', talks_path, class: "ml-2 py-4 px-14 bg-secondary text-lg inline-block font-bold text-white text-center" %>
  </div>
</div>


