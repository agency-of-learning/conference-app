      <% @day_two_talks_upcomimg&.each do |talk| %>
        <%= render "shared/my_schedule_talk", talk: talk %>
      <% end %>
    </div>

    <div class="flex flex-row justify-center">
      <div>
        <% if (@day_three_talks_upcoming)&.any? %>
          <h2 class="font-extrabold itlic text-xl text-secondary">Fri, Oct 6</h2>
        <% end %>
      </div>
    </div>
    
    <div id="talks" class="min-w-full">
      <% @day_three_talks_upcoming&.each do |talk| %>
        <%= render "shared/my_schedule_talk", talk: talk %>
      <% end %>
    </div>

  </div>
  
