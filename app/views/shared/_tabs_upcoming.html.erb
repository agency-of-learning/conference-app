<div data-controller="tabs" data-tabs-active-tab="-mb-px border-l border-t border-r rounded-t">
  <ul class="list-reset flex border-b">
    <li class="-mb-px mr-1" data-tabs-target="tab" data-action="click->tabs#change">
      <a class="bg-white inline-block py-2 px-4 text-blue-500 hover:text-blue-700 font-semibold no-underline" href="#">Upcoming</a>
    </li>
    <li class="mr-1" data-tabs-target="tab" data-action="click->tabs#change">
      <a class="bg-white inline-block py-2 px-4 text-blue-500 hover:text-blue-700 font-semibold no-underline" href="#">Past</a>
    </li>
  </ul>

  <div class="hidden py-4 px-4 border-l border-b border-r" data-tabs-target="panel">

    <div>
      <h2 class="font-bold text-xl">Wed, Oct 4</h2>
    </div>

    <div id="talks" class="min-w-full">
      <% @day_one_talks.each do |talk| %>
        <%= render "talks/talk", talk: talk %>
      <% end %>
    </div>

    <div>
      <h2 class="font-bold text-xl">Thurs, Oct 5</h2>
    </div>

    <div id="talks" class="min-w-full">
      <% @day_two_talks.each do |talk| %>
        <%= render "talks/talk", talk: talk %>
      <% end %>
    </div>

    <div>
      <h2 class="font-bold text-xl">Fri, Oct 6</h2>
    </div>

      <% @day_three_talks.each do |talk| %>
        <%= render "talks/talk", talk: talk %>
      <% end %>
    </div>

  </div>

  <div class="hidden py-4 px-4 border-l border-b border-r" data-tabs-target="panel">
    <h2 class="font-bold text-2xl">Wed, Oct 4</h2>
    <div id="talks" class="min-w-full">
      <% @day_one_talks.each do |talk| %>
        <%= render "talks/talk", talk: talk %>
      <% end %>
    </div>

    <h2 class="font-bold text-2xl">Thurs, Oct 5</h2>

    <div id="talks" class="min-w-full">
      <% @day_two_talks.each do |talk| %>
        <%= render "talks/talk", talk: talk %>
      <% end %>
    </div>

    <h2 class="font-bold text-2xl">Fri, Oct 6</h2>

      <% @day_three_talks.each do |talk| %>
        <%= render "talks/talk", talk: talk %>
      <% end %>
    </div>

  </div>

</div>