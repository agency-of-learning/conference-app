<nav id="desktop" class="hidden bg-white lg:flex justify-between items-center fixed w-full px-2 py-2 z-10 top-0 left-0 right-0">
  <div class="sm:mb-0 flex w-full">
   <a href="/" class="text-2xl no-underline text-grey-darkest hover:text-blue-dark">
        <%= inline_svg_tag "rails_world.svg", size: "100% * 100%", class:"lg:w-96 w-full" %>
    </a>
  </div>

  <div class="w-full">
    <ul class="menu menu-horizontal px-1 hidden lg:flex space-x-2 items-center float-right">
        <% if current_user %>
            <li>
                 <div class='flex flex-row bg-secondary hover:bg-primary text-white font-bold py-1.5 px-4'>
                             <%= tag.div id: :notifications_count do %>
                                <%= render "notifications/count", count: current_user.unread_notifications_count %>
                             <%end%>  
                            <%= link_to "Notifications",  user_notifications_path, data: {action: "click->dropdown#toggle"} %>  
                </div>
            </li>
            <li>
                <%= link_to 'Agenda', talks_path, data: {action: "click->dropdown#toggle"}, class: 'bg-secondary hover:bg-primary text-white font-bold py-2 px-4  whitespace-nowrap' %>   
            </li>
            <li>
                <%= link_to 'My Schedule', user_root_path, data: {action: "click->dropdown#toggle"}, class: 'bg-secondary hover:bg-primary text-white font-bold py-2 px-4  whitespace-nowrap' %>   
            </li>      
            <li>
                <%= link_to 'Profile', user_profile_path, data: {action: "click->dropdown#toggle"}, class: 'bg-secondary hover:bg-primary text-white font-bold py-2 px-4  whitespace-nowrap' %>   
            </li>
            <li>
                <%= link_to 'About', contributors_path, data: {action: "click->dropdown#toggle"}, class: 'bg-secondary hover:bg-primary text-white font-bold py-2 px-4' %>   
            </li>
            <li>
            <%= button_to("Logout", destroy_user_session_path, method: :delete, class: "bg-secondary-100 hover:bg-primary text-white font-bold py-[.3rem] px-4")%>
            </li>
        <% end %>
    </ul>
  </div>
</nav>

<nav id="mobile-nav" class="lg:hidden bg-white flex justify-between fixed w-full px-2 py-2 z-10 top-0 left-0 right-0">
  <div class="sm:mb-0 flex w-full ">
   <a href="/" class="text-2xl no-underline text-grey-darkest hover:text-blue-dark">
        <%= inline_svg_tag "rails_world.svg", size: "100% * 100%", class:"" %>
    </a>
  </div>


 <%if current_user%>
    <div class="lg:hidden flex flex-row">
        <div class="inline-block text-sm px-4 leading-none rounded no-underline text-secondary lg:mt-0">
            <div class="relative w-full" data-controller="dropdown">
                <div data-action="click->dropdown#toggle" role="button" data-dropdown-target="button" tabindex="0" class="inline-block select-none w-full">
                    <%= tag.div id: :notifications_count_mobile do %>
                        <% if current_user.unread_notifications_count > 0 %>
                          <%= render "notifications/count_mobile", count: current_user.unread_notifications_count %>
                        <% end %>
                    <%end%>
                    <div class="flex items-center justify-center  rounded-lg text-center align-baseline w-full">
                        <%= svg 'hamburger' %>
                    </div>
                </div>
                <div data-dropdown-target="menu" class="fixed right-0 hidden text-center w-screen h-screen left-0 top-0">
                    <div class="bg-white overflow-hidden flex flex-col w-full h-full p-1 z-10 ">
                        <%= link_to user_notifications_path, class: "flex flex-row justify-center items-center no-underline px-6 py-6 mx-6 my-2 italic font-bold text-white bg-secondary hover:bg-primary whitespace-nowrap" do %> 
                            <%= tag.div id: :notifications_count_menu do %>
                                <%= render "notifications/count_menu", count: current_user.unread_notifications_count %>
                            <%end%>  
                            Notifications
                        <% end %>    
                    </div>
                        <%= link_to 'My Schedule', user_root_path, data: {action: "click->dropdown#toggle"}, class: 'no-underline px-6 py-6 mx-6 my-2 italic font-bold text-white bg-secondary whitespace-nowrap' %>
                        <%= link_to 'Agenda', talks_path, data: {action: "click->dropdown#toggle"}, class: 'no-underline px-6 py-6 mx-6 my-2 italic font-bold text-white bg-secondary whitespace-nowrap' %>
                        <%= link_to 'Profile / Settings',  user_profile_path, data: {action: "click->dropdown#toggle"}, class: 'no-underline px-6 py-6 mx-6 my-2 italic font-bold text-white bg-secondary whitespace-nowrap' %>
                        <%= link_to 'About', contributors_path, data: {action: "click->dropdown#toggle"}, class: 'no-underline px-6 py-6 mx-6 my-2 italic font-bold text-white bg-secondary whitespace-nowrap' %> 
                        <div class="mx-6 my-2">
                        <%= button_to "Log Out", destroy_user_session_path, method: :delete, class: "w-full bg-secondary-100 hover:bg-primary no-underline py-6 px-6 italic font-bold text-white whitespace-nowrap"%>
                        </div>
                        <%= link_to "Close", "", class: 'no-underline px-6 py-6 mx-6 my-2 italic font-bold text-white bg-primary hover:bg-primary whitespace-nowrap' %>
                    </div>
                </div>
            </div>
        </div>
    </div>
   <%end%>
</nav>
