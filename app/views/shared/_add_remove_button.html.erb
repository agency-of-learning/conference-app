      <%= tag.div id: dom_id(talk, :talks_users) do %>
        <% if talk.selected_by?(current_user) %>
          <%= button_to talk_my_schedule_path(talk), method: :delete do %>
            <i class="fa-solid fa-calendar-check w-11 h-11 text-secondary"></i>
          <% end %>
        <% else %>
          <%= button_to talk_my_schedule_path(talk), method: :post, class: "text-secondary rounded" do %>
            <i class="fa-solid fa-calendar-plus w-11 h-11 text-secondary"></i>
          <% end %>
        <% end %>
      <% end %> 
